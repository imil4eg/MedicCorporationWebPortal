@using MedicalCorporateWebPortal.Models;
@model IList<Tuple<User, Doctor, IEnumerable<string>>>

@{
    ViewData["Title"] = "Специалисты";
}

@using (Html.BeginForm("Doctors", "Doctor", FormMethod.Get))
{
    <div id="assets">
        <h3>Специалисты</h3>
        <div id="parent" class="container">
            @for (int i = 0; i < Model.Count(); i++)
            {
                @if (i % 3 == 0)
                {
                    <p></p>
                }
                <div class="col-md-2 col-xs-5 inline block">
                    <table>
                        <tr>
                            <td>
                                <img src="~/images/default-user-image.png" alt="avatar" width="100" height="75" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("DoctorProfile","Doctor",new { id = Model[i].Item1.UserID })">
                                    <span>
                                        @string.Format("{0} {1}", Model[i].Item1.LastName, Model[i].Item1.FirstName)
                                    </span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Model[i].Item2.Speciality
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @if (Model[i].Item3.Count() > 0)
                                {
                                    @foreach (var date in Model[i].Item3)
                                    {
                                        <div class="col-md-1">@date</div>
                                    }

                                    <a href="">
                                        <span>
                                            Записаться
                                        </span>
                                    </a>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    </div>
}


