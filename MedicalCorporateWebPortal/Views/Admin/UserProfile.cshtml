@model UserViewModel

@{
    ViewData["Title"] = "UserProfile";
}

<h2>Профиль пользователя</h2>

@using(Html.BeginForm("UserProfile","Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserName)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName)
            <div class="col-md-10">
                @Model.UserName
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            <div class="col-md-10">
                @Model.Email
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            <div class="col-md-10">
                @Model.LastName
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            <div class="col-md-10">
                @Model.FirstName
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MiddleName)
            <div class="col-md-10">
                @Model.MiddleName
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber)
            <div class="col-md-10">
                @Model.PhoneNumber
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Gender)
            <div class="col-md-10">
                @Model.Gender
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Role)
            @if(Model.Role == UserRole.Пациент)
            {
                <div class="col-md-10">
                    @Model.Role
                </div>
            }
            else
            {
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Role, new SelectList(Enum.GetValues(typeof(UserRole))))
                </div>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
            <div class="col-md-offset-2 col-md-2">
                <input type="button" value="Назад" class="btn btn-default" />
            </div>
        </div>
    </div>
}