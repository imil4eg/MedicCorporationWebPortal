@{
    ViewData["Title"] = "Главная страница";
}

<div id="white_content_box"></div>
<form class="form-wrapper">
    <input type="text" id="search" placeholder="Вася Пупкин и тд" required>
    <input type="submit" value="найти" id="submit">
</form>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div id="white_content_box"></div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/1505874684_8-kopiya2.jpg" alt="store">
            </div>

            <div class="item">
                <img src="~/images/ui-54b73f2132f401.59456423.jpeg" alt="art">
            </div>

            <div class="item">
                <img src="~/images/vrach.jpg" alt="Flower">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}


